FROM golang:1.20-bullseye AS build

WORKDIR /src

COPY go.mod ./
COPY go.sum ./

RUN go mod download

COPY *.go ./

RUN go build -o /app

FROM test-svc


WORKDIR /app

COPY --from=build /app .

#RUN chmod +w /app/generated
#RUN chmod +r /app/documents
RUN chmod +x /app/app

ENTRYPOINT ["/app/app"]

